---
// Simplified wallet island component
export interface Props {
  className?: string;
}

const { className = '' } = Astro.props;
---

<div id="wallet-island" class={className}>
  <button class="btn btn-primary">Connect Wallet</button>
</div>

<style>
  #wallet-island {
    min-height: 48px;
    display: flex;
    align-items: center;
  }
</style>