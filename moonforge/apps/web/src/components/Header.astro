---
import ConnectButton from './ConnectButton.astro';
---

<header class="border-b border-background-light/10 bg-background/80 backdrop-blur-md sticky top-0 z-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <div class="flex-shrink-0 flex items-center">
        <a href="/" class="flex items-center space-x-2">
          <span class="text-2xl font-bold bg-gradient-to-r from-primary to-accent bg-clip-text text-transparent">
            Moonbirds Art Forge
          </span>
        </a>
      </div>
      <nav class="hidden md:ml-6 md:flex md:items-center md:space-x-8">
        <a href="/" class="text-foreground hover:text-primary transition-colors">
          Home
        </a>
        <a href="/generator" class="text-foreground hover:text-primary transition-colors">
          Generator
        </a>
        <a href="/gallery" class="text-foreground hover:text-primary transition-colors">
          Gallery
        </a>
      </nav>
      <div class="flex items-center">
        <ConnectButton client:load />
      </div>
    </div>
  </div>
</header>
